from __future__ import print_function

import inspect
import os
import re
import sys

from bvzlib import filesystem
from bvzlib import options
from bvzlib import resources

from store import meta
from store import asset

OPTIONS = [
    "asset_path",
    "version",
    "thumbnails",
    "merge",
    "poster_frame",
    "language",
]


# ------------------------------------------------------------------------------
def validate_options():
    """
    Validates that the options passed are internally consistent,and complete.

    :return: Nothing.
    """

    if not os.path.exists(opts.asset_path):
        err = resc.error(100)
        err.msg = err.msg.format(asset_path=opts.asset_path)
        print(err.msg)
        sys.exit(100)

    if not os.path.exists(os.path.join(opts.asset_path, ".asset")):
        err = resc.error(101)
        err.msg = err.msg.format(asset_path=opts.asset_path)
        print(err.msg)
        sys.exit(101)

    pattern = "v[0-9][0-9][0-9][0-9]"
    result = re.match(pattern, opts.version)
    if not result:
        err = resc.error(102)
        err.msg = err.msg.format(version=opts.version)
        print(err.msg)
        sys.exit(102)

    if not os.path.exists(os.path.join(opts.asset_path, opts.version)):
        err = resc.error(103)
        err.msg = err.msg.format(version=opts.version,
                                 asset_path=opts.asset_path)
        print(err.msg)
        sys.exit(103)

    if not opts.thumbnails and not opts.poster_frame:
        msg = resc.message("nothing_to_do")
        print(msg)
        sys.exit(0)

    # Thumbnails must exist
    if opts.thumbnails:
        for thumbnail_file in opts.thumbnails:
            if not os.path.exists(thumbnail_file):
                err = resc.error(104)
                err.msg = err.msg.format(thumbnail_file=thumbnail_file)
                print(err.msg)
                sys.exit(104)

    # Thumbnails must be named correctly
    if opts.thumbnails:
        pattern = name + "\.[0-9]+\..+"
        for thumbnail_file in opts.thumbnails:
            thumbnail_file = os.path.split(thumbnail_file)[1]
            results = re.match(pattern, thumbnail_file)
            if not results:
                err = resc.error(105)
                err.msg = err.msg.format(name=name,
                                         thumbnail_file=thumbnail_file)
                print(err.msg)
                sys.exit(105)

    # Poster frame must exist
    if opts.thumbnails and opts.poster_frame:
        pattern = name + "\." + str(opts.poster_frame) + "\..+"
        found = False
        for thumbnail_file in opts.thumbnails:
            thumbnail_file = os.path.split(thumbnail_file)[1]
            results = re.match(pattern, thumbnail_file)
            if results:
                found = True
                break
        if not found:
            err = resc.error(106)
            err.msg = err.msg.format(frame=str(opts.poster_frame))
            print(err.msg)
            sys.exit(106)


# ==============================================================================
if __name__ == "__main__":

    # Extract the language from the sys.argv if it is there
    language = "english"
    if "-language" in sys.argv:
        idx = sys.argv.index("-language")
        try:
            language = sys.argv[idx]
        except IndexError:
            pass

    module_d = os.path.split(inspect.stack()[0][1])[0]
    resources_d = os.path.join(module_d, "..", "resources")
    resc = resources.Resources(resources_d, "bin_squirrel-thumbnail", language)

    # Create and initialize the options object
    try:
        opts_obj = options.Options(OPTIONS, resc, sys.argv[1:], language)
    except ValueError as error:
        print(error)
        sys.exit()

    opts = opts_obj.opts
    sys.argv = opts_obj.args

    # If no version was given, get the highest version
    parent_d, name = os.path.split(opts.asset_path)
    if not opts.version:
        asset_obj = asset.Asset(name, parent_d)
        opts.version = asset_obj.get_highest_ver()

    # If there are thumbnails, get a list of those files from the spec provided.
    if opts.thumbnails:
        opts.thumbnails = filesystem.expand_frame_spec(opts.thumbnails)
    else:
        opts.thumbnails = None

    # Validate the inputs
    validate_options()

    meta_obj = meta.Metadata(opts.asset_path, opts.version, opts.language)

    if opts.thumbnails:
        if opts.nomerge:
            meta_obj.delete_thumbnails(opts.version)
        meta_obj.add_thumbnails(opts.version,
                                opts.thumbnails,
                                opts.poster_frame)

    if not opts.thumbnails and opts.poster_frame:
        meta_obj.set_poster(opts.version, opts.poster_frame)
